<section class="hero background is-fullheight-with-navbar">
  <div class="hero-body">
    <div class="container is-widescreen">
      <div class="container has-text-centered">
        <%if params[:q] == ""%>
          <p class="title pb-4  page-title" >Search results for "<%= params[:f] %>"</p>
        <%else%>
          <p class="title pb-4  page-title" >Search results for "<%= params[:q] %>"</p>
        <%end%>
        <div class="notification is-dark px-6 pt-6 pb-6">
          <div class="columns is-multiline is-mobile search-result-error">
          <%if @games.count == 0%>
            <p class="is-size-4">Sorry, there are 0 results for this search.</p>
          <%else%>
            <%@games.each do |game|%>
              <div class="column is-one-quarter">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                       <%= link_to image_tag(game.thumbnail, :alt => game.title), game, :class => "game-image" %>
                    </figure>
                  </div>
                  <div class="card-content">
                    <div class="content">
                      <p><%=game.title%></p>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <%end%>
            <div class="paginate-container my-4">
              <%= paginate @games %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>